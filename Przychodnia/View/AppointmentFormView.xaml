<UserControl x:Class="Przychodnia.View.AppointmentFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Przychodnia.View"
             xmlns:shared="clr-namespace:Przychodnia.ViewModel.Shared"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=shared:AppointmentAddViewModel}"
             d:DesignHeight="900" d:DesignWidth="1200">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="StackPanel">
            <Setter Property="Width" Value="300"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Style.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="0,40,0,5"/>
                    <Setter Property="FontSize" Value="15"/>
                </Style>
                <Style TargetType="ComboBox">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="FontSize" Value="15"/>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <Grid d:Background="Gray">
        <Border CornerRadius="10" BorderThickness="2" BorderBrush="#FAFAFA" Background="#FAFAFA" Margin="150, 20, 150, 60" >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding HeaderText}" Margin="20" 
                           FontSize="25" FontWeight="DemiBold"
                           d:Text="Dodaj nową wizytę" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"/> 
               
                <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="0,30,50,0">
                    <TextBlock Text="PESEL pacjenta" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FormData.EnteredPatientPesel}" Margin="0,0,0,50"/>

                    <TextBlock Text="Data" Margin="0,0,0,5"/>
                    <DatePicker Margin="0,0,0,50" SelectedDate="{Binding FormData.SelectedDate}"/>

                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="50,30,0,0">
                    <TextBlock Text="Lekarz" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Doctors}"
                              SelectedItem="{Binding FormData.SelectedDoctor}"
                              DisplayMemberPath="FullName" Margin="0,0,0,50"/>
                    <TextBlock Text="Godzina" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableHours}"
                              SelectedItem="{Binding FormData.SelectedHour}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StringFormat={}{0:hh\\:mm}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <Button Grid.Row="3" Grid.ColumnSpan="2" Margin="0,30,0,0" IsDefault="True"
                        Content="{Binding SubmitButtonText}" 
                        Command="{Binding SubmitCommand}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
