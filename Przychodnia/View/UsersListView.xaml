<UserControl x:Class="Przychodnia.View.UsersListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Przychodnia.View"
             mc:Ignorable="d"
             xmlns:viewmodel="clr-namespace:Przychodnia.ViewModel.Admin"
             xmlns:converter="clr-namespace:Przychodnia.Converter"
             d:DataContext="{d:DesignInstance Type=viewmodel:UserListViewModel}"
             d:DesignHeight="900" d:DesignWidth="1400">
    <UserControl.Resources>
        <converter:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
    </UserControl.Resources>

    <Grid d:Background="#ededed">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="Użytkownicy" FontSize="25" Margin="20,20,20,0" FontWeight="DemiBold" VerticalAlignment="Bottom"/>


        <Border Grid.Row="2" Style="{StaticResource DataGridBorder}">
            <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="0.25*"/>
                    <DataGridTextColumn Header="Imię" Binding="{Binding FirstName}"/>
                    <DataGridTextColumn Header="Nazwisko" Binding="{Binding LastName}"/>
                    <DataGridTextColumn Header="Typ" Binding="{Binding UserType.Name}" Width="1.5*"/>
                    <DataGridTextColumn Header="Login" Binding="{Binding Login}"/>
                    <DataGridTextColumn Header="Hash hasła" Binding="{Binding PasswordHash}"/>
                    <DataGridTextColumn Header="Numer licencji" Binding="{Binding LicenseNumber}"/>
                    <DataGridTextColumn Header="Laboratorium" Binding="{Binding Laboratory.Name}"/>
                    <DataGridTextColumn Header="Zarządzane laboratorium" Binding="{Binding ManagedLaboratory.Name}" Width="1.5*"/>
                    <DataGridTextColumn Header="Aktywny" Binding="{Binding IsActive, Converter={StaticResource BoolToYesNoConverter}}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource DataGridBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>

                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Text="Filtruj" FontSize="20" Margin="10" />
                <Expander Grid.Row="0" Grid.Column="2" Margin="0,15,0,0">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,20,0,0" >
                        <StackPanel Width="170" Margin="10,0,0,10">
                            <TextBlock Text="Imię" FontSize="17" FontWeight="ExtraLight"/>
                            <TextBox Text="{Binding SelectedUserFirstName}"/>
                        </StackPanel>
                        <StackPanel Width="170" Margin="60,0,0,10">
                            <TextBlock Text="Nazwisko" FontSize="17" FontWeight="ExtraLight"/>
                            <TextBox Text="{Binding SelectedUserLastName}"/>
                        </StackPanel>
                        <StackPanel Width="170" Margin="60,0,0,10">
                            <TextBlock Text="Typ" FontSize="17" FontWeight="ExtraLight"/>
                            <ComboBox BorderThickness="0" Margin="0,10,0,0"
                                      ItemsSource = "{Binding UserTypeNames}"
                                      SelectedItem="{Binding SelectedUserTypeName}"/>
                        </StackPanel>
                        <Button Margin="60,0,0,0" Content="Filtruj" 
                                Command="{Binding FilterCommand}"/>
                        <Button Margin="30,0,0,0" Content="Wyczyść" 
                                Command="{Binding ClearFilterCommand}"/>

                    </StackPanel>
                </Expander>

            </Grid>
        </Border>

        <Grid Grid.Row="3" >
            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Content="Dodaj" Command="{Binding AddCommand}" Margin="0,10,10,10"/>
                <Button Content="Edytuj" Command="{Binding EditCommand}"/>
                <Button Content="Usuń" Command="{Binding RemoveCommand}"/>
                <Button Content="Anuluj" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
