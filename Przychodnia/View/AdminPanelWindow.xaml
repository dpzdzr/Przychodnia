<Window x:Class="Przychodnia.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:adminViewmodels="clr-namespace:Przychodnia.ViewModel.Admin"
        xmlns:sharedViewmodels="clr-namespace:Przychodnia.ViewModel.Shared"
        xmlns:views="clr-namespace:Przychodnia.View" 
        d:DataContext="{d:DesignInstance Type=adminViewmodels:AdminPanelViewModel}"
        mc:Ignorable="d"
        Title="Przychodnia" Height="800" Width="1200">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <DockPanel IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Plik">
                <MenuItem Header="Wyloguj"/>
                <MenuItem Header="Zamknij"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Vertical" Margin="10" DockPanel.Dock="Left">
            <Button Content="← Wstecz" Command="{Binding NavigateBackCommand}" IsEnabled="{Binding CanNavigateBack}" Margin="5,5,5,20" Width="125"/>
            <Expander Header="Użytkownicy">
                <StackPanel>
                    <Button Content="Przeglądaj" Command="{Binding NavigateToUsersListCommand}" Margin="5" Width="125"/>
                </StackPanel>
            </Expander>

            <Expander Header="Pacjenci">
                <StackPanel>
                    <Button Content="Przeglądaj" Command="{Binding NavigateToPatientsListCommand}" Margin="5" Width="125"/>
                </StackPanel>
            </Expander>

            <Expander Header="Kody pocztowe">
                <StackPanel>
                    <Button Content="Przeglądaj" Command="{Binding NavigateToPostalCodesListCommand}" Margin="5" Width="125"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type adminViewmodels:UserAddViewModel}">
                    <views:UserFormView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type adminViewmodels:UserListViewModel}">
                    <views:UsersListView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type adminViewmodels:AdminPanelHomePageViewModel}">
                    <views:AdminPanelHomePageView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type adminViewmodels:UserEditViewModel}">
                    <views:UserFormView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type sharedViewmodels:PostalCodeListViewModel}">
                    <views:PostalCodesListView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type sharedViewmodels:PatientListViewModel}">
                    <views:PatientsListView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type sharedViewmodels:PatientAddViewModel}">
                    <views:PatientFormView/>
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type sharedViewmodels:PatientEditViewModel}">
                    <views:PatientFormView/>
                </DataTemplate>

            </ContentControl.Resources>
        </ContentControl>
    </DockPanel>
</Window>
