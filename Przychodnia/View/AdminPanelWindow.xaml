<Window x:Class="Przychodnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Przychodnia.ViewModel.Admin"
        xmlns:views="clr-namespace:Przychodnia.View" 
        d:DataContext="{d:DesignInstance Type=viewmodels:AdminPanelViewModel}"
        mc:Ignorable="d"
        Title="Przychodnia" Height="600" Width="900">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <DockPanel IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Plik">
                <MenuItem Header="Wyloguj"/>
                <MenuItem Header="Zamknij"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Vertical" Margin="10" DockPanel.Dock="Left">
            <Button Content="← Wstecz" Command="{Binding NavigateBackCommand}" IsEnabled="{Binding CanNavigateBack}" Margin="5,5,5,20" Width="125"/>
            <Expander Header="Użytkownicy">
                <StackPanel>
                    <Button Content="Dodaj" Command="{Binding NavigateToAddUserCommand}" Margin="5" Width="125"/>
                    <Button Content="Przeglądaj" Command="{Binding NavigateToUsersListCommand}" Margin="5" Width="125"/>
                </StackPanel>
            </Expander>

            <Expander Header="Pacjenci">
                <StackPanel>
                    <Button Content="Dodaj" Command="{Binding NavigateToAddUserCommand}" Margin="5" Width="125"/>
                    <Button Content="Przeglądaj" Command="{Binding NavigateToAddUserCommand}" Margin="5" Width="125"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:AddUserViewModel}">
                    <views:UserFormView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:UsersListViewModel}">
                    <views:UsersListView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:AdminPanelHomePageViewModel}">
                    <views:AdminPanelHomePageView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:EditUserViewModel}">
                    <views:UserFormView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </DockPanel>





</Window>
