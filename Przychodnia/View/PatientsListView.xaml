<UserControl x:Class="Przychodnia.View.PatientsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Przychodnia.View"
             xmlns:converter="clr-namespace:Przychodnia.Converter"
             xmlns:viewmodels="clr-namespace:Przychodnia.ViewModel.Shared"
             d:DataContext="{d:DesignInstance Type=viewmodels:PatientListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:SexToStringConverter x:Key="SexToStringConverter"/>
    </UserControl.Resources>

    <Grid d:Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource DataGridBorder}">
            <DataGrid ItemsSource="{Binding Patients}" SelectedItem="{Binding SelectedPatient}" ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="0.25*"/>
                    <DataGridTextColumn Header="Imię" Binding="{Binding FirstName}"/>
                    <DataGridTextColumn Header="Nazwisko" Binding="{Binding LastName}"/>
                    <DataGridTextColumn Header="PESEL" Binding="{Binding Pesel}"/>
                    <DataGridTextColumn Header="Miasto" Binding="{Binding PostalCode.City}"/>
                    <DataGridTextColumn Header="Kod pocztowy" Binding="{Binding PostalCode.Code}"/>
                    <DataGridTextColumn Header="Ulica" Binding="{Binding Street}"/>
                    <DataGridTextColumn Header="Numer domu" Binding="{Binding HouseNumber}"/>
                    <DataGridTextColumn Header="Numer mieszkania" Binding="{Binding ApartmentNumber}"/>
                    <DataGridTextColumn Header="Płeć" Binding="{Binding Sex, Converter={StaticResource SexToStringConverter}}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Content="Dodaj" Command="{Binding AddPatientCommand}" Margin="0,10,10,10"/>
                <Button Content="Edytuj" Command="{Binding EditPatientCommand}"/>
                <Button Content="Usuń" Command="{Binding RemovePatientCommand}"/>
                <Button Content="Anuluj" Command="{Binding CancelSelectionCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
