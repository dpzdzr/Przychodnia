<UserControl x:Class="Przychodnia.View.PatientsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Przychodnia.View"
             xmlns:converter="clr-namespace:Przychodnia.Converter"
             xmlns:viewmodels="clr-namespace:Przychodnia.ViewModel.Shared"
             d:DataContext="{d:DesignInstance Type=viewmodels:PatientsListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:SexToStringConverter x:Key="SexToStringConverter"/>
    </UserControl.Resources>

    <Grid d:Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Patients}" SelectedItem="{Binding SelectedPatient}"
                  Grid.Row="0" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserDeleteRows="False" 
                  CanUserAddRows="False" ColumnWidth="*" Margin="10" IsReadOnly="True" HeadersVisibility="Column" FontSize="12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Imię" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="PESEL" Binding="{Binding Pesel}"/>
                <DataGridTextColumn Header="Miasto" Binding="{Binding PostalCode.City}"/>
                <DataGridTextColumn Header="Kod pocztowy" Binding="{Binding PostalCode.Code}"/>
                <DataGridTextColumn Header="Numer domu" Binding="{Binding HouseNumber}"/>
                <DataGridTextColumn Header="Numer mieszkania" Binding="{Binding ApartmentNumber}"/>
                <DataGridTextColumn Header="Płeć" Binding="{Binding Sex, Converter={StaticResource SexToStringConverter}}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Content="Dodaj" Grid.Column="0" Width="120" Height="35" Margin="5" Command="{Binding }"/>
            <Button Content="Edytuj" Grid.Column="1" Width="120" Height="35" Margin="5" Command="{Binding }"/>
            <Button Content="Usuń" Grid.Column="2" Width="120" Height="35" Margin="5" Command="{Binding }"/>
        </Grid>
    </Grid>
</UserControl>
